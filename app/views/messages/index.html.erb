<h1>Vos messages</h1>

<style>
    div {
        border: 1px solid black;
        padding: 1em;
        margin-block: 1rem;
        border-radius: 0.5rem;
    }

</style>

<% @messages.each do |message|%>
    <div>
        <p><%= message.body %></p>
        <%= link_to "Voir", message %>
        <%= link_to "Modifier", edit_message_path(message) %>
        <%= link_to "Supprimer", message_path(message), data: {turbo_method: :delete, turbo_confirm: "Confirmer la suppression ?"} %>
    </div>
<% end %>

<%= link_to "Nouveau message", new_message_path %>
